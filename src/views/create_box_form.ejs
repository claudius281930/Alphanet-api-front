<!DOCTYPE html>
<html>

<!-- Metadados da pagina -->
<%- include("./partials/head" )%>

  <body>
    <!-- Banner -->
    <div class="banner"></div>

    <div class="text-center">
      <h1>AlphanetSLM</h1>
      <blockquote class="blockquote">
        <h3>Criação de uma nova Caixa</h3>
      </blockquote>
    </div>

    <form action="/create/box" method="POST">
      <div>
        <label for="date">Data de Modificação:</label>
        <input type="date" id="data" name="dateModify" value="<%= currentDate %>" required autofocus>
      </div>

      <div>
        <label for="name">Nome Descritivo:</label>
        <input id="name" name="nameDescription" value="crispin-fusão-adicionada" required autofocus></input>
      </div>

      <div>
        <label for="locale">Localização:</label>
        <input type="text" id="locale" name="locale" value="Prox. praça da goiaba" required>
      </div>

      <div>
        <label for="descricao">Active CTO:</label>
        <input type="number" id="descricao" name="activeCto" required>
      </div>

      <div>
        <label for="networkTechnology">Tecnologia de Rede:</label>
        <input type="text" id="networkTechnology" name="networkTechnology" value="Epon" required autofocus>
      </div>

      <div>
        <button type="submit">Criar</button>
      </div>
    </form>

    <!-- Footer da pagina -->
    <%- include("./partials/footer") %>
  </body>

</html>