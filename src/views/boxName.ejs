<!DOCTYPE html>
<html lang="en">
<!-- Metadados da página -->
<%- include("./partials/head") %>

    <body>
        <div class="text-center">
            <h1>AlphanetSLM</h1>
            <blockquote class="blockquote">
                <h3>Nome da Caixa</h3>
            </blockquote>
        </div>

        <div>
            <% if (nameBox) { %>
                <ul>

                    <li>
                        <span class="content-list">ID:</span>
                        <%= nameBox.box.id %>
                    </li>
                    <li>
                        <span class="content-list">Data de Modificação:</span>
                        <%= nameBox.box.dateModify %>
                    </li>
                    <li>
                        <span class="content-list">Nome da Descrição:</span>
                        <%= nameBox.box.nameDescription %>
                    </li>
                    <li>
                        <span class="content-list">Localização:</span>
                        <%= nameBox.box.locale %>
                    </li>
                    <li>
                        <span class="content-list">Active CTO:</span>
                        <%= nameBox.box.activeCto %>
                    </li>
                    <li>
                        <span class="content-list">Tecnologia de Rede:</span>
                        <%= nameBox.box.networkTechnology %>
                    </li>
                </ul>
                <% } else { %>
                    <p>Box não encontrada.</p>
                    <% } %>
        </div>
        <form method="GET" action="/detail/name_description" id="detail">
            <input type="hidden" name="name_description" value="<%= nameBox.box.nameDescription %>">
            <button name="detail" class="detalhe-button">Detalhe</button>
        </form>
        <!-- Footer da pagina -->
        <%- include("./partials/footer") %>
    </body>

</html>